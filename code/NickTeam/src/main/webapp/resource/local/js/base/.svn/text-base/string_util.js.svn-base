
/**
 * 检查邮箱地址是否合法
 */
function isEmail(str) {
	var pattern = /^([\.a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+(\.[a-zA-Z0-9_-])+/;
	if (!pattern.test(str)) {
		return false;
	} else {
		return true;
	}
}

/**
 * 检查电话号码是否合法
 */
function isTel(str) {
	var partten = /^0(([1-9]\d)|([3-9]\d{2}))\d{8}$/;
	if (!partten.test(str)) {
		return false;
	} else {
		return true;
	}
}

/**
 * 检查手机号码是否合法
 */
function isMobile(str) {
	var partten = /^0?1[3|4|5|8][0-9]\d{8}$/;
	if (!partten.test(str)) {
		return false;
	} else {
		return true;
	}
}